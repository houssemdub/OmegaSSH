<Window x:Class="OmegaSSH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:OmegaSSH"
        xmlns:views="clr-namespace:OmegaSSH.Views"
        xmlns:vm="clr-namespace:OmegaSSH.ViewModels"
        xmlns:infra="clr-namespace:OmegaSSH.Infrastructure"
        mc:Ignorable="d"
        Title="OmegaSSH" Height="750" Width="1200"
        Background="{StaticResource BgBrush}"
        Foreground="{StaticResource TextBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <infra:BindingProxy x:Key="MainProxy" Data="{Binding}"/>
        
        <CollectionViewSource x:Key="GroupedSnippets" Source="{Binding Snippets}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Category"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" GlassFrameThickness="0" CornerRadius="0" ResizeBorderThickness="8"/>
    </WindowChrome.WindowChrome>

    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Background="{StaticResource BgBrush}" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Global Header (Title + Menu) -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Status Bar -->
            </Grid.RowDefinitions>

            <!-- PREMIUM HEADER -->
            <Border Grid.Row="0" Background="{StaticResource SidebarBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" CornerRadius="12,12,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="32"/>
                    </Grid.RowDefinitions>

                    <!-- Title Bar -->
                    <Grid Grid.Row="0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                            <fa:ImageAwesome Icon="Terminal" Width="14" Foreground="{StaticResource PrimaryAccentBrush}" Margin="0,0,12,0">
                                <fa:ImageAwesome.Effect>
                                    <DropShadowEffect BlurRadius="10" Color="{StaticResource AccentColor}" Opacity="0.5" ShadowDepth="0"/>
                                </fa:ImageAwesome.Effect>
                            </fa:ImageAwesome>
                            <TextBlock Text="OMEGA" FontFamily="Segoe UI" FontWeight="Light" FontSize="14" VerticalAlignment="Center" Opacity="0.7"/>
                            <TextBlock Text="SSH" FontFamily="Segoe UI" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Foreground="{StaticResource PrimaryAccentBrush}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" WindowChrome.IsHitTestVisibleInChrome="True" Margin="0,0,5,0" VerticalAlignment="Top">
                            <Button Style="{StaticResource IconButton}" Click="Minimize_Click" Width="40" Height="30">
                                <fa:ImageAwesome Icon="Minus" Width="10" Foreground="{StaticResource TextDimBrush}"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}" Click="Maximize_Click" Width="40" Height="30">
                                <fa:ImageAwesome Icon="WindowMaximize" Width="10" Foreground="{StaticResource TextDimBrush}"/>
                            </Button>
                            <Button Click="Close_Click" Width="40" Height="30" Background="Transparent" BorderThickness="0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" Background="Transparent" CornerRadius="0,12,0,0">
                                                        <fa:ImageAwesome Icon="Close" Width="10" Foreground="{StaticResource TextDimBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Integrated Menu -->
                    <Menu Grid.Row="1" Background="Transparent" Foreground="{StaticResource TextBrush}" Margin="10,0" WindowChrome.IsHitTestVisibleInChrome="True" VerticalAlignment="Center">
                        <MenuItem Header="FILE">
                            <MenuItem Header="New Session" Command="{Binding AddSessionCommand}">
                                <MenuItem.Icon><fa:ImageAwesome Icon="Plus" Width="10" Foreground="{StaticResource PrimaryAccentBrush}"/></MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="New Local Terminal">
                                <MenuItem.Icon><fa:ImageAwesome Icon="Desktop" Width="10" Foreground="{StaticResource PrimaryAccentBrush}"/></MenuItem.Icon>
                                <MenuItem Header="PowerShell" Command="{Binding OpenLocalTerminalCommand}" CommandParameter="powershell.exe"/>
                                <MenuItem Header="Command Prompt" Command="{Binding OpenLocalTerminalCommand}" CommandParameter="cmd.exe"/>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Import Sessions" Command="{Binding ImportSessionsCommand}">
                                <MenuItem.Icon><fa:ImageAwesome Icon="Download" Width="10" Foreground="{StaticResource SecondaryAccentBrush}"/></MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Export Sessions" Command="{Binding ExportSessionsCommand}">
                                <MenuItem.Icon><fa:ImageAwesome Icon="Upload" Width="10" Foreground="{StaticResource SecondaryAccentBrush}"/></MenuItem.Icon>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Exit" Click="Close_Click">
                                <MenuItem.Icon><fa:ImageAwesome Icon="PowerOff" Width="10" Foreground="#FF5555"/></MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem Header="VIEW">
                            <MenuItem Header="Sidebar" Command="{Binding ToggleSidebarCommand}" IsChecked="{Binding IsSidebarVisible, Mode=OneWay}"/>
                            <MenuItem Header="Snippets" Command="{Binding ToggleSnippetsPanelCommand}" IsChecked="{Binding IsSnippetsPanelVisible, Mode=OneWay}"/>
                            <MenuItem Header="Status Bar" Command="{Binding ToggleStatusBarCommand}" IsChecked="{Binding IsStatusBarVisible, Mode=OneWay}"/>
                            <Separator/>
                            <MenuItem Header="Zen Mode" Command="{Binding ToggleZenModeCommand}" InputGestureText="F11" IsChecked="{Binding IsZenMode, Mode=OneWay}"/>
                        </MenuItem>
                        <MenuItem Header="ORCHESTRATION">
                            <MenuItem Header="Key Manager" Command="{Binding OpenKeyManagerCommand}">
                                <MenuItem.Icon><fa:ImageAwesome Icon="Shield" Width="10" Foreground="{StaticResource HighlightAccentBrush}"/></MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Multi-Commander" Command="{Binding OpenMultiCommanderCommand}">
                                <MenuItem.Icon><fa:ImageAwesome Icon="Bolt" Width="10" Foreground="{StaticResource PrimaryAccentBrush}"/></MenuItem.Icon>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Broadcast Mode" Command="{Binding ToggleBroadcastModeCommand}" IsChecked="{Binding IsBroadcastMode, Mode=OneWay}"/>
                        </MenuItem>
                    </Menu>
                </Grid>
            </Border>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280">
                        <ColumnDefinition.Style>
                            <Style TargetType="ColumnDefinition">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSidebarVisible}" Value="False">
                                        <Setter Property="Width" Value="0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ColumnDefinition.Style>
                    </ColumnDefinition>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="220">
                        <ColumnDefinition.Style>
                            <Style TargetType="ColumnDefinition">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSnippetsPanelVisible}" Value="False">
                                        <Setter Property="Width" Value="0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ColumnDefinition.Style>
                    </ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!-- LEFT SIDEBAR: SESSIONS -->
                <Border Grid.Column="0" Background="{StaticResource SidebarGradient}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                    <Grid Margin="10,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Search Palette -->
                        <Border Grid.Row="0" Margin="0,0,0,20">
                            <Grid>
                                <TextBox Style="{StaticResource ModernTextBox}" 
                                         Text="{Binding SessionFilter, UpdateSourceTrigger=PropertyChanged}"
                                         Tag="Quick jump..." Height="38" FontSize="12"/>
                                <fa:ImageAwesome Icon="Search" Width="12" Foreground="{StaticResource TextDimBrush}" HorizontalAlignment="Right" Margin="0,0,15,0" IsHitTestVisible="False" Opacity="0.5"/>
                            </Grid>
                        </Border>

                        <TextBlock Grid.Row="1" Text="INFRASTRUCTURE" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextDimBrush}" Margin="5,0,0,10"/>

                        <!-- Session Navigator -->
                        <TreeView Grid.Row="2" ItemsSource="{Binding SessionTree}" Background="Transparent" BorderThickness="0">
                            <TreeView.Resources>
                                <HierarchicalDataTemplate DataType="{x:Type vm:SessionTreeItemViewModel}" ItemsSource="{Binding Children}">
                                    <Border CornerRadius="6" Padding="8,4" Margin="0,1" Cursor="Hand" x:Name="itemBorder">
                                        <StackPanel Orientation="Horizontal">
                                            <Grid Width="16" Margin="0,0,10,0">
                                                <fa:ImageAwesome Icon="Folder" Width="14" Foreground="{StaticResource HighlightAccentBrush}" Visibility="{Binding IsFolder, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                <fa:ImageAwesome Icon="Server" Width="14" Foreground="{StaticResource PrimaryAccentBrush}" Visibility="{Binding IsFolder, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                            </Grid>
                                            <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextBrush}" FontSize="12" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <HierarchicalDataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsFolder}" Value="False">
                                            <Setter TargetName="itemBorder" Property="Background" Value="Transparent"/>
                                        </DataTrigger>
                                    </HierarchicalDataTemplate.Triggers>
                                </HierarchicalDataTemplate>
                            </TreeView.Resources>
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <EventSetter Event="MouseDoubleClick" Handler="SessionTreeItem_DoubleClick"/>
                                    <Setter Property="IsExpanded" Value="True"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TreeViewItem">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                                                        <ContentPresenter x:Name="PART_Header" ContentSource="Header" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                                    </Border>
                                                    <ItemsPresenter x:Name="ItemsHost" Grid.Row="1" Margin="15,0,0,0"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsExpanded" Value="False">
                                                        <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="#11FFFFFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True" SourceName="Bd">
                                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource GlassBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TreeView.ItemContainerStyle>
                        </TreeView>

                        <!-- Sidebar Footer Tools -->
                        <Border Grid.Row="3" Margin="0,15,0,0" Padding="0,15,0,0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource IconButton}" Command="{Binding OpenSettingsCommand}" ToolTip="SYSTEM SETTINGS">
                                        <fa:ImageAwesome Icon="Gear" Width="14" Opacity="0.5"/>
                                    </Button>
                                    <Button Style="{StaticResource IconButton}" Command="{Binding OpenKeyManagerCommand}" ToolTip="KEYS &amp; VAULT" Margin="5,0,0,0">
                                        <fa:ImageAwesome Icon="Shield" Width="14" Opacity="0.5"/>
                                    </Button>
                                    <Border Width="1" Background="{StaticResource BorderBrush}" Margin="8,4"/>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Background="#282A36" ToolTip="Dracula" Command="{Binding ChangeThemeCommand}" CommandParameter="dracula" Style="{StaticResource RoundThemeButton}" Margin="0,0,5,0"/>
                                        <Button Background="#2E3440" ToolTip="Nord" Command="{Binding ChangeThemeCommand}" CommandParameter="nord" Style="{StaticResource RoundThemeButton}" Margin="0,0,5,0"/>
                                        <Button Background="#0A0E1A" ToolTip="CyberNeon" Command="{Binding ChangeThemeCommand}" CommandParameter="cyberneon" Style="{StaticResource RoundThemeButton}" Margin="0,0,5,0"/>
                                        <Button Background="#000000" ToolTip="Retro" Command="{Binding ChangeThemeCommand}" CommandParameter="retro" Style="{StaticResource RoundThemeButton}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- CENTER VIEW: TERMINALS -->
                <Grid Grid.Column="2" x:Name="CenterView">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- QUICK ACTION HEADER -->
                    <Border Grid.Row="0" Margin="20,15" Background="{StaticResource SurfaceBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <Grid Margin="15,8">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <fa:ImageAwesome Icon="Bolt" Width="12" Foreground="{StaticResource HighlightAccentBrush}" Margin="0,0,12,0"/>
                                <TextBox x:Name="QuickConnectBox" Width="400" Background="Transparent" BorderThickness="0" Foreground="White" 
                                         Tag="Type user@host to warp..." Padding="0" VerticalAlignment="Center" FontSize="13"
                                         KeyDown="QuickConnectBox_KeyDown" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Grid Margin="0,0,15,0">
                                    <Border Width="8" Height="8" CornerRadius="4" Background="#FF4444" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-12,0,0,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsBroadcastMode}" Value="True">
                                                        <Setter Property="Background" Value="#00FF00"/>
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard RepeatBehavior="Forever">
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.3" Duration="0:0:0.8" AutoReverse="True"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsBroadcastMode}" Value="False">
                                                        <Setter Property="Opacity" Value="0.3"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                    <TextBlock Text="BROADCAST" FontSize="9" FontWeight="Bold" VerticalAlignment="Center" Opacity="0.5"/>
                                </Grid>
                                <Button Style="{StaticResource IconButton}" Command="{Binding AddSessionCommand}">
                                    <fa:ImageAwesome Icon="Plus" Width="14" Opacity="0.7"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- TERMINAL COMPARTMENT -->
                    <Grid Grid.Row="1" Margin="10,0,10,10">
                        <!-- Key Manager Overlay -->
                        <Border Panel.ZIndex="100" Background="{StaticResource BgBrush}" Visibility="{Binding IsKeyManagerActive, Converter={StaticResource BooleanToVisibilityConverter}}" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Button Style="{StaticResource IconButton}" Command="{Binding CloseKeyManagerCommand}" HorizontalAlignment="Left" Margin="0,0,0,20">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:ImageAwesome Icon="ArrowLeft" Width="12" Margin="0,0,10,0"/>
                                        <TextBlock Text="RETURN TO COMMAND CENTER" FontWeight="Bold" FontSize="10"/>
                                    </StackPanel>
                                </Button>
                                <views:KeyManagerView Grid.Row="1" DataContext="{Binding KeyManager}"/>
                            </Grid>
                        </Border>

                        <TabControl ItemsSource="{Binding TerminalTabs}" SelectedItem="{Binding SelectedTab}">
                            <TabControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <fa:ImageAwesome Icon="Terminal" Width="12" Margin="0,0,10,0" Foreground="{StaticResource PrimaryAccentBrush}"/>
                                        <TextBlock Text="{Binding SessionName}" FontSize="12" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <Button Style="{StaticResource IconButton}" Padding="2" Command="{Binding Data.CloseTabCommand, Source={StaticResource MainProxy}}" CommandParameter="{Binding}">
                                            <fa:ImageAwesome Icon="Close" Width="8" Opacity="0.5"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </TabControl.ItemTemplate>
                            <TabControl.ContentTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SidebarBrush}" CornerRadius="0,12,12,12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                                        <views:TerminalView />
                                    </Border>
                                </DataTemplate>
                            </TabControl.ContentTemplate>
                        </TabControl>
                    </Grid>
                </Grid>

                <!-- RIGHT SIDEBAR: SNIPPETS -->
                <Border Grid.Column="4" Background="{StaticResource SidebarGradient}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,0,0">
                    <Grid Margin="10,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="SNIPPET LIBRARY" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextDimBrush}" Margin="5,0,0,15"/>

                        <ListBox Grid.Row="1" ItemsSource="{Binding Source={StaticResource GroupedSnippets}}" Background="Transparent" BorderThickness="0" VirtualizingPanel.IsVirtualizing="True">
                             <ListBox.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Padding="5,15,5,5">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="{StaticResource SecondaryAccentBrush}" FontSize="9" Opacity="0.7" TextAlignment="Left"/>
                                            </Border>
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ListBox.GroupStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8" Background="{StaticResource SurfaceBrush}" Padding="15,12" Margin="0,0,0,8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding Data.ExecuteSnippetCommand, Source={StaticResource MainProxy}}" CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Grid>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold" FontSize="11" Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding Command}" Foreground="{StaticResource TextDimBrush}" FontSize="10" TextTrimming="CharacterEllipsis" FontFamily="Consolas" Opacity="0.6"/>
                                            </StackPanel>
                                            <fa:ImageAwesome Icon="Play" Width="8" Foreground="{StaticResource PrimaryAccentBrush}" HorizontalAlignment="Right" VerticalAlignment="Top" Opacity="0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>

            <!-- PREMIUM STATUS BAR -->
            <Border Grid.Row="2" Background="{StaticResource SidebarBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" CornerRadius="0,0,12,12" Height="30"
                    Visibility="{Binding IsStatusBarVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid Margin="20,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="6" Height="6" CornerRadius="3" Background="#00FF00" Margin="0,0,10,0">
                            <Border.Effect>
                                <BlurEffect Radius="4"/>
                            </Border.Effect>
                        </Border>
                        <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center" FontSize="10" Foreground="{StaticResource TextDimBrush}" Opacity="0.8"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Border Background="{StaticResource GlassBrush}" CornerRadius="4" Padding="8,2" Margin="10,0">
                            <TextBlock Text="AES-256-GCM" FontSize="9" FontWeight="Bold" Foreground="{StaticResource PrimaryAccentBrush}"/>
                        </Border>
                        <TextBlock Text="READY" FontSize="9" FontWeight="Black" Opacity="0.4"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
