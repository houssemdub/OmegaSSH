<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Core Palette -->
    <Color x:Key="BgColor">#0D1117</Color>
    <Color x:Key="SidebarColor">#161B22</Color>
    <Color x:Key="AccentColor">#58A6FF</Color>
    <Color x:Key="AccentColorLow">#1A58A6FF</Color>
    <Color x:Key="BorderColor">#30363D</Color>
    <Color x:Key="TextColor">#C9D1D9</Color>
    <Color x:Key="TextDimColor">#8B949E</Color>
    
    <!-- Neon Cyberpunk Accents -->
    <Color x:Key="CyberCyan">#00F2FF</Color>
    <Color x:Key="CyberMagenta">#FF00E5</Color>
    <Color x:Key="CyberYellow">#FDF500</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="BgBrush" Color="{StaticResource BgColor}"/>
    <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="TextDimBrush" Color="{StaticResource TextDimColor}"/>
    
    <!-- Glassmorphism Effects -->
    <LinearGradientBrush x:Key="GlassBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#22FFFFFF" Offset="0"/>
        <GradientStop Color="#08FFFFFF" Offset="1"/>
    </LinearGradientBrush>
    
    <SolidColorBrush x:Key="CyberCyanBrush" Color="{StaticResource CyberCyan}"/>
    <SolidColorBrush x:Key="CyberMagentaBrush" Color="{StaticResource CyberMagenta}"/>
    
</ResourceDictionary>
