<UserControl x:Class="OmegaSSH.Views.KeyManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid Background="{StaticResource BgBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <TextBlock Text="SSH KEY MANAGER" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryAccentBrush}" Margin="0,0,0,20"/>
            <Button Command="{Binding ImportKeyCommand}" Style="{StaticResource ModernButton}" HorizontalAlignment="Right" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="Download" Width="10" Margin="0,0,5,0" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="IMPORT KEY"/>
                </StackPanel>
            </Button>
        </Grid>

        <ListBox Grid.Row="1" ItemsSource="{Binding Keys}" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="{StaticResource SidebarBrush}" Margin="0,0,0,10" Padding="15" CornerRadius="8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <fa:ImageAwesome Icon="Key" Width="24" Foreground="{StaticResource HighlightAccentBrush}" Margin="0,0,20,0" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextBrush}" FontSize="16" FontWeight="Bold"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Type}" Foreground="{StaticResource TextDimBrush}" FontSize="12" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding CreatedAt, StringFormat=d}" Foreground="{StaticResource TextDimBrush}" FontSize="12"/>
                                </StackPanel>
                                <TextBlock Text="{Binding PublicKey}" Foreground="{StaticResource TextDimBrush}" FontSize="10" TextTrimming="CharacterEllipsis" Opacity="0.5"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Style="{StaticResource IconButton}" Command="{Binding DataContext.CopyPublicKeyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" ToolTip="Copy OpenSSH Public Key">
                                    <fa:ImageAwesome Icon="Copy" Width="14" Foreground="{StaticResource PrimaryAccentBrush}"/>
                                </Button>
                                <Button Style="{StaticResource IconButton}" Command="{Binding DataContext.ExportKeyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" ToolTip="Export Private Key" Margin="10,0">
                                    <fa:ImageAwesome Icon="ExternalLink" Width="14" Foreground="{StaticResource SecondaryAccentBrush}"/>
                                </Button>
                                <Button Style="{StaticResource IconButton}" Command="{Binding DataContext.DeleteKeyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" ToolTip="Delete Key">
                                    <fa:ImageAwesome Icon="Trash" Width="14" Foreground="#FF4444"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border Grid.Row="2" Background="{StaticResource SidebarBrush}" Padding="20" CornerRadius="8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Key Name" Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewKeyName}" Width="150" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Comment" Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewKeyComment}" Width="200" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                </StackPanel>
                <Button Grid.Column="1" Style="{StaticResource ModernButton}" Command="{Binding GenerateKeyCommand}" Content="GENERATE NEW RSA KEY" VerticalAlignment="Bottom"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
