<Window x:Class="OmegaSSH.Views.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="OmegaSSH Notification" Height="200" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Border Background="{StaticResource BgBrush}" BorderBrush="{StaticResource CyberCyanBrush}" BorderThickness="2" CornerRadius="8">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <fa:ImageAwesome x:Name="IconImage" Icon="InfoCircle" Width="20" Foreground="{StaticResource CyberCyanBrush}" Margin="0,0,10,0"/>
                <TextBlock x:Name="TitleLabel" Text="NOTIFICATION" Foreground="{StaticResource CyberCyanBrush}" FontWeight="Bold" FontSize="14"/>
            </StackPanel>

            <TextBlock Grid.Row="1" x:Name="MessageLabel" Text="Message goes here..." Foreground="{StaticResource TextBrush}" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="12"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource ModernButton}" Content="DISMISS" Click="Dismiss_Click" Padding="20,5" FontSize="11"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
