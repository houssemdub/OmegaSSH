<UserControl x:Class="OmegaSSH.Views.SftpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OmegaSSH.Views"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid Background="{DynamicResource SidebarBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- SFTP Header / Toolbar -->
        <Border Padding="10" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding CurrentPath}" VerticalAlignment="Center" FontSize="11" Foreground="{DynamicResource TextDimBrush}" TextTrimming="CharacterEllipsis" ToolTip="{Binding CurrentPath}"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5,0,0,0">
                    <Button Style="{StaticResource IconButton}" Command="{Binding NavigateUpCommand}" ToolTip="Up One Level" Margin="0,0,5,0">
                        <fa:ImageAwesome Icon="LevelUp" Width="10" Foreground="{DynamicResource TextDimBrush}"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Command="{Binding RefreshCommand}" ToolTip="Refresh">
                        <fa:ImageAwesome Icon="Refresh" Width="10" Foreground="{DynamicResource TextDimBrush}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- File List -->
        <ListBox Grid.Row="1" ItemsSource="{Binding Entries}" BorderThickness="0" Background="Transparent" 
                 x:Name="FilesList" d:ItemsSource="{d:SampleData ItemCount=5}"
                 AllowDrop="True" Drop="FilesList_Drop" DragOver="FilesList_DragOver">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid x:Name="ItemGrid" Background="Transparent" VerticalAlignment="Center" Margin="0,2">
                        <Grid.ContextMenu>
                            <ContextMenu Style="{StaticResource ModernContextMenu}">
                                <MenuItem Header="Download" Command="{Binding DataContext.DownloadCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}">
                                    <MenuItem.Icon><fa:ImageAwesome Icon="Download" Width="10"/></MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Delete" Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}">
                                    <MenuItem.Icon><fa:ImageAwesome Icon="Trash" Width="10" Foreground="#FF5555"/></MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Refresh" Command="{Binding DataContext.RefreshCommand, RelativeSource={RelativeSource AncestorType=ListBox}}">
                                    <MenuItem.Icon><fa:ImageAwesome Icon="Refresh" Width="10"/></MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Grid.ContextMenu>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <fa:ImageAwesome Icon="Folder" Width="10" Foreground="{DynamicResource PrimaryAccentBrush}" VerticalAlignment="Center" Visibility="Collapsed" x:Name="FolderIcon"/>
                        <fa:ImageAwesome Icon="FileOutline" Width="10" Foreground="{DynamicResource TextDimBrush}" VerticalAlignment="Center" x:Name="FileIcon"/>

                        <!-- Name -->
                        <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" Margin="5,0" FontSize="12" TextTrimming="CharacterEllipsis"/>
                        
                        <!-- Size -->
                        <TextBlock Grid.Column="2" Text="{Binding Size}" Foreground="{DynamicResource TextDimBrush}" FontSize="10" VerticalAlignment="Center"/>
                    </Grid>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsDirectory}" Value="True">
                            <Setter TargetName="FolderIcon" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="FileIcon" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="ItemGrid" Property="Cursor" Value="Hand"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding NavigateCommand}" 
                               CommandParameter="{Binding ElementName=FilesList, Path=SelectedItem}"/>
            </ListBox.InputBindings>
        </ListBox>

        <ProgressBar Grid.Row="1" VerticalAlignment="Top" Height="2" IsIndeterminate="True" 
                      Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                      Foreground="{DynamicResource PrimaryAccentBrush}" Background="Transparent" BorderThickness="0"/>

        <Border Grid.Row="1" VerticalAlignment="Bottom" Background="{DynamicResource SidebarBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="10,5"
                Visibility="{Binding IsTransferring, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="Transferring files..." FontSize="10" Foreground="{DynamicResource TextDimBrush}" Margin="0,0,0,5"/>
                <ProgressBar Value="{Binding TransferProgress}" Height="4" Foreground="{DynamicResource HighlightAccentBrush}" Background="#1AFFFFFF" BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
