<Window x:Class="OmegaSSH.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OmegaSSH" Height="300" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Border Background="{StaticResource BgBrush}" BorderBrush="{StaticResource PrimaryAccentBrush}" BorderThickness="1" CornerRadius="15">
        <Grid>
            <!-- Background Glow -->
            <Ellipse Width="300" Height="300" Fill="{StaticResource PrimaryAccentBrush}" Opacity="0.1">
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>
            
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="OMEGASSH" FontSize="48" FontWeight="ExtraBold" Foreground="{StaticResource PrimaryAccentBrush}">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00FFFF" BlurRadius="20" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="INITIALIZING SYSTEM..." HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="{StaticResource TextDimBrush}" FontSize="12"/>
                
                <ProgressBar x:Name="LoadProgress" Width="300" Height="4" Margin="0,30,0,0" Background="#11FFFFFF" Foreground="{StaticResource PrimaryAccentBrush}" BorderThickness="0"/>
                <TextBlock x:Name="StatusLabel" Text="Check files..." Foreground="{StaticResource TextDimBrush}" FontSize="10" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <TextBlock Text="v1.0.0-BETA" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" Foreground="{StaticResource TextDimBrush}" FontSize="10"/>
        </Grid>
    </Border>
</Window>
