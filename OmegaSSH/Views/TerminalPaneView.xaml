<UserControl x:Class="OmegaSSH.Views.TerminalPaneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <Border Background="{StaticResource BgBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <RichTextBox x:Name="OutputBox" 
                              Background="#050505" Foreground="{StaticResource TextBrush}"
                              BorderThickness="0" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Padding="15">
                    <FlowDocument PagePadding="0"/>
                </RichTextBox>

                <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}" Padding="12,10">
                    <Grid>
                        <fa:ImageAwesome Icon="ChevronRight" Width="10" Foreground="{StaticResource PrimaryAccentBrush}" HorizontalAlignment="Left" Margin="5,0,0,0" Opacity="0.5"/>
                        <TextBox x:Name="InputBox" 
                              Style="{StaticResource ModernTextBox}" 
                              KeyDown="InputBox_KeyDown"
                              Tag="Execute command..." Padding="25,4,10,4" BorderThickness="0" Background="Transparent" Height="34"/>
                    </Grid>
                </Border>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                   <Button Style="{StaticResource IconButton}" Content="î„Š" FontFamily="Segoe MDL2 Assets" FontSize="10" Opacity="0.3"
                            Command="{Binding DataContext.ClosePaneCommand, RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2}}"
                            CommandParameter="{Binding}"
                            Visibility="{Binding DataContext.IsSplit, RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
