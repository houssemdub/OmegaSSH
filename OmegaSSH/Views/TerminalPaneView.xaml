<UserControl x:Class="OmegaSSH.Views.TerminalPaneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OmegaSSH.Views"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <Border Background="{DynamicResource BgBrush}" CornerRadius="12" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <RichTextBox x:Name="OutputBox" 
                               Background="#050505" Foreground="{DynamicResource TextBrush}"
                               PreviewKeyDown="InputBox_KeyDown"
                               BorderThickness="0" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Padding="15">
                    <FlowDocument PagePadding="0"/>
                </RichTextBox>

                <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}" Padding="12,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <fa:ImageAwesome Icon="ChevronRight" Width="10" Foreground="{DynamicResource PrimaryAccentBrush}" HorizontalAlignment="Left" Margin="5,0,10,0" Opacity="0.5"/>
                        
                        <TextBox x:Name="InputBox" Grid.Column="1"
                               Style="{StaticResource ModernTextBox}" 
                               PreviewKeyDown="InputBox_KeyDown"
                               Tag="Execute command..." Padding="5,4,10,4" BorderThickness="0" Background="Transparent" Height="34"/>

                        <Button Grid.Column="2" Style="{StaticResource IconButton}" 
                                Command="{Binding InterruptCommand}"
                                ToolTip="Interrupt Process (Ctrl+C)" Margin="5,0,0,0">
                            <fa:ImageAwesome Icon="StopCircle" Width="14" Foreground="#FF5555"/>
                        </Button>
                    </Grid>
                </Border>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                   <Button Style="{StaticResource IconButton}" Content="î„Š" FontFamily="Segoe MDL2 Assets" FontSize="10" Opacity="0.3"
                            Command="{Binding DataContext.ClosePaneCommand, RelativeSource={RelativeSource AncestorType=local:TerminalView}}"
                            CommandParameter="{Binding}"
                            Visibility="{Binding DataContext.IsSplit, RelativeSource={RelativeSource AncestorType=local:TerminalView}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
