<UserControl x:Class="OmegaSSH.Views.TerminalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:OmegaSSH.ViewModels"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:OmegaSSH.Views"
             xmlns:infra="clr-namespace:OmegaSSH.Infrastructure"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <infra:SplitToColumnsConverter x:Key="SplitToColumnsConverter"/>
        <infra:SplitToRowsConverter x:Key="SplitToRowsConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" x:Name="SftpColumn"/>
        </Grid.ColumnDefinitions>

        <!-- TERMINAL PANE HOST -->
        <Border Grid.Column="0" Background="Transparent" Padding="10">
            <ItemsControl ItemsSource="{Binding Panes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding IsVerticalSplit, Converter={StaticResource SplitToColumnsConverter}}" 
                                     Rows="{Binding IsVerticalSplit, Converter={StaticResource SplitToRowsConverter}}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:TerminalPaneView Margin="5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <!-- FLOATING TOOLBAR -->
        <Border Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="30,25" Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Padding="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Opacity="0.4">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="1"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource IconButton}" Command="{Binding SplitVerticalCommand}" ToolTip="Split Vertical">
                    <fa:ImageAwesome Icon="Columns" Width="12"/>
                </Button>
                <Button Style="{StaticResource IconButton}" Command="{Binding SplitHorizontalCommand}" ToolTip="Split Horizontal" Margin="5,0">
                    <fa:ImageAwesome Icon="ThLarge" Width="12"/>
                </Button>
                <Border Width="1" Background="{DynamicResource BorderBrush}" Margin="5,0"/>
                <Button Style="{StaticResource IconButton}" Click="ToggleSftp_Click" Margin="5,0">
                    <fa:ImageAwesome Icon="FolderOpen" Width="12"/>
                </Button>
                <Border Width="1" Background="{DynamicResource BorderBrush}" Margin="5,0"/>
                <Button Style="{StaticResource IconButton}" Command="{Binding ActivePane.InterruptCommand}" ToolTip="Interrupt Active Command (Ctrl+C)" Margin="5,0">
                    <fa:ImageAwesome Icon="StopCircle" Width="12" Foreground="#FF5555"/>
                </Button>
                <Border Width="1" Background="{DynamicResource BorderBrush}" Margin="5,0"/>
                <ToggleButton x:Name="TunnelButton" Style="{StaticResource IconButton}" ToolTip="Active Tunnels">
                    <fa:ImageAwesome Icon="Link" Width="12"/>
                </ToggleButton>

                <Popup IsOpen="{Binding IsChecked, ElementName=TunnelButton}" PlacementTarget="{Binding ElementName=TunnelButton}" Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                    <Border Background="{DynamicResource SidebarBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="12" Padding="15" Width="300">
                        <StackPanel>
                            <TextBlock Text="PORT FORWARDING" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource PrimaryAccentBrush}" Margin="0,0,0,15"/>
                            <ItemsControl ItemsSource="{Binding Tunnels}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource BgBrush}" Margin="0,0,0,5" Padding="10" CornerRadius="4">
                                            <Grid>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding LocalPort}" FontWeight="Bold"/>
                                                    <fa:ImageAwesome Icon="ArrowRight" Width="8" Margin="10,0" Opacity="0.5"/>
                                                    <TextBlock Text="{Binding RemoteHost}" Opacity="0.7"/>
                                                    <TextBlock Text=":" Opacity="0.7"/>
                                                    <TextBlock Text="{Binding RemotePort}" Opacity="0.7"/>
                                                </StackPanel>
                                                <Button Style="{StaticResource IconButton}" HorizontalAlignment="Right" Command="{Binding DataContext.StartTunnelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Visibility="{Binding IsEnabled, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                                    <fa:ImageAwesome Icon="Play" Width="8" Foreground="#00FF00"/>
                                                </Button>
                                                <fa:ImageAwesome Icon="Check" Width="10" Foreground="#00FF00" HorizontalAlignment="Right" Visibility="{Binding IsEnabled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <Button Style="{StaticResource ModernButton}" Command="{Binding AddTunnelCommand}" Content="+ ADD TUNNEL" Margin="0,10,0,0" Height="30" FontSize="10"/>
                        </StackPanel>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.5" ShadowDepth="0"/>
                        </Border.Effect>
                    </Border>
                </Popup>
            </StackPanel>
        </Border>

        <!-- SEARCH OVERLAY -->
        <Border Grid.Column="0" x:Name="SearchOverlay" VerticalAlignment="Top" HorizontalAlignment="Right" 
                Background="{DynamicResource SurfaceBrush}" CornerRadius="12" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                Visibility="Collapsed" Padding="15,10" Panel.ZIndex="100" Margin="0,80,30,0">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome Icon="Search" Width="12" Foreground="{DynamicResource PrimaryAccentBrush}" Margin="0,0,15,0"/>
                <TextBox x:Name="SearchBox" Width="200" Background="Transparent" BorderThickness="0" 
                         Foreground="White" VerticalAlignment="Center"
                         KeyDown="SearchBox_KeyDown" Tag="Find in scrollback..." Style="{StaticResource ModernTextBox}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Style="{StaticResource IconButton}" Click="CloseSearch_Click" Margin="10,0,0,0">
                    <fa:ImageAwesome Icon="Close" Width="10"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- SFTP INTEGRATION -->
        <Border Grid.Column="1" Width="350" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1,0,0,0" x:Name="SftpPane" Visibility="Collapsed" Background="{DynamicResource SidebarGradient}">
            <local:SftpView DataContext="{Binding Sftp}"/>
        </Border>
    </Grid>
</UserControl>
